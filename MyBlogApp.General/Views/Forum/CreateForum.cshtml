@model AddForumModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create new Forum
        </div>
    </div>
    <div class="row">
        <div id="createForum">
            <form method="post" id="createForumForm" enctype="multipart/form-data" asp-controller="Forum" asp-action="AddForum">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Create forum title name" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Forum Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Create forum description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="uploadImage">
                    <label>Upload Image for Forum</label>
                    <br/>
                    <label class="btn btn-primary btn-file">
                        Browse <input asp-for="ImageUpload" type="file" style="display: none"/>
                    </label>
                </div>
                <button type="submit" class="btn btn-success">Create Forum</button>
            </form>
        </div>
    </div>
</div>