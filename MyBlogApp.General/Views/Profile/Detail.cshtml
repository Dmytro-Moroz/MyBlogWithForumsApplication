@using Microsoft.AspNetCore.Identity

@inject UserManager<User> UserManager;

@model ProfileModel


<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionProfileHeading">
            User Profile
        </div>
    </div>
    <div class="row userProfile">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image: url(@Model.ProfileImage)"></div>
            @if (User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" style="margin-top: 20px;" asp-controller="Profile" asp-action="UploadProfileImage">
                    <div id="upload">
                        <label class="btn btn-secondary btn-file">
                            Browse<input type="file" name="file" style="display: none"/>
                        </label>
                    </div>
                    <button type="submit" id="btnProfile" class="btn btn-primary">Submit</button>
                </form>
            }
        </div>
    </div>
    <div class="col-md-8 profileDetail">
        <div id="userName">@Model.UserName</div>
        @if (@Model.IsAdmin)
        {
            <span class="isAdmin">Admin</span>
        }
        <div id="userRating">Current Rating: @Model.Rating</div>
        <div id="userEmailLabel">Email: @Model.Email</div>
        <div id="userCreateLabel">Member since: @Model.MemberSince</div>
    </div>
</div>